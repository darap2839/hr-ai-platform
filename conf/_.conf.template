server {
    ${LISTEN_BLOCK}
    server_name ${DOMAIN_NAME};

    location /api {
        proxy_pass http://backend:8000;
        include /etc/nginx/common-proxy.conf;
    }

    location /nlp {
       proxy_pass http://web:8000;
       include /etc/nginx/common-proxy.conf;
    }

    location / {
        proxy_pass http://web:4173;
        include /etc/nginx/common-proxy.conf;
    }
}